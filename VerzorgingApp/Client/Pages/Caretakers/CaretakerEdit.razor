@page "/Caretakers/CaretakerEdit"
@page "/Caretakers/CaretakerEdit/{Id}"

@inherits CaretakerEditBase

<section class="Plan-edit">
    @if (!Saved)
    {
        <h1 class="page-title">Details for @Caretaker.FirstName</h1>
        <EditForm Model="@Caretaker.FirstName" OnValidSubmit="@HandleValidSubmit" OnInvalidSubmit="@HandleInvalidSubmit">

            <DataAnnotationsValidator />
            <ValidationSummary />

            <div class="form-group">
                <label for="title">Titel: </label>
                <InputText id="title" class="form-control" @bind-Value="@Caretaker.FirstName" placeholder="Titel"></InputText>
                <ValidationMessage For="@(() => Caretaker.FirstName)" />
            </div>

            <div class="form-group">
                <label for="details">Details: </label>
                <InputText id="details" class="form-control" @bind-Value="@Caretaker.LastName" placeholder="Details"></InputText>
                <ValidationMessage For="@(() => Caretaker.LastName)" />
            </div>

            <div class="form-group">
                <label for="StartDate">Datum: </label>
                <InputDate id="StartDate" class="form-control" @bind-Value="@Caretaker.DateofBirth" placeholder="Startdatum"></InputDate>
                <ValidationMessage For="@(() => Caretaker.DateofBirth)" />
            </div>


